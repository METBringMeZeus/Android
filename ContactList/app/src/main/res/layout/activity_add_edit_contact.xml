<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorSecondary"
    tools:context=".AddEditContact">

    <Button
        android:id="@+id/AddBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="40dp"

        android:backgroundTint="@color/ColorTextPrimary"
        android:contentDescription="TODO"
        android:elevation="5sp"
        android:hint="Add Contact"
        android:src="@drawable/baseline_add_24"
        android:tint="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450sp"

        android:layout_centerInParent="true"
        android:layout_marginLeft="0sp"
        android:layout_marginRight="0sp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImg"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_gravity="center"
            android:background="@drawable/baseline_person24" />
        <!--edit text for name_input-->
        <EditText
            android:id="@+id/Name_Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/background_input"
            android:drawableStart="@drawable/text_name"
            android:drawablePadding="7sp"
            android:hint="Name"
            android:inputType="textPersonName"
            android:padding="20sp"
            android:textColor="@color/ColorTextSeconday"
            android:textColorHint="@color/white"
            android:textSize="18sp" />

        <!--edit text for Phone_input-->
        <EditText
            android:id="@+id/Phone_Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/background_input"
            android:drawableStart="@drawable/num_phone"
            android:drawablePadding="7sp"
            android:hint="Phone"
            android:inputType="phone"
            android:padding="20sp"
            android:textColor="@color/ColorTextSeconday"
            android:textColorHint="@color/white"
            android:textSize="18sp" />

        <!--edit text for email-->
        <EditText
            android:id="@+id/Email_Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/background_input"
            android:drawableStart="@drawable/text_mail"
            android:drawablePadding="7sp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="20sp"
            android:textColor="@color/ColorTextSeconday"
            android:textColorHint="@color/white"
            android:textSize="18sp" />
        <!--edit text for adress-->
        <EditText
            android:id="@+id/adress_Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/background_input"
            android:drawableStart="@drawable/text_adress"
            android:drawablePadding="7sp"
            android:hint="Adress"
            android:inputType="textLongMessage"
            android:padding="20sp"
            android:textColor="@color/ColorTextSeconday"
            android:textColorHint="@color/white"
            android:textSize="18sp" />


    </LinearLayout>

</RelativeLayout>